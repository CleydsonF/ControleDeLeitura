@model TestePV.Models.Leitura

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Tem certeza de que deseja Deletar?</h3>
<div>
    <h4>Leitura</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Leitor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Leitor.CPF)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Livro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Livro.LivroId)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LeiturasId" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index"  class="btn btn-info" >Voltar</a>
    </form>
</div>
