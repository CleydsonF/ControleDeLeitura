@model IEnumerable<TestePV.Models.Livro>

@{
    ViewData["Title"] = "Livro";
}

<h1>Livro</h1>

<p>
     <a class="btn btn-success" asp-action="Create">Cadastrar Livro </a>
</p>
<table id="TabelaLivros" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LivroNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editora)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paginas)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LivroNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editora)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paginas)
            </td>
            
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.LivroId">Alterar</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.LivroId">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.LivroId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>


          @section Scripts {
    <script>
        $(document).ready(function () {

            $('#TabelaLivros').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
                }
            });
        });
    </script>
}