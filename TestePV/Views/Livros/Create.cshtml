@model TestePV.Models.Livro

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<h4>Livro</h4>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card">
                <div class="card-header">Dados do Livro</div>
                <div class="card-body row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="LivroNome" class="control-label"></label>
                            <input asp-for="LivroNome" class="form-control" />
                            <span asp-validation-for="LivroNome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Autor" class="control-label"></label>
                            <input asp-for="Autor" class="form-control" />
                            <span asp-validation-for="Autor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Editora" class="control-label"></label>
                            <input asp-for="Editora" class="form-control" />
                            <span asp-validation-for="Editora" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Genero" class="control-label"></label>
                            <input asp-for="Genero" class="form-control" />
                            <span asp-validation-for="Genero" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="LivroAnoPublicacao" class="control-label"></label>
                            <input asp-for="LivroAnoPublicacao" class="form-control" />
                            <span asp-validation-for="LivroAnoPublicacao" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Paginas" class="control-label"></label>
                            <input asp-for="Paginas" class="form-control" />
                            <span asp-validation-for="Paginas" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Sinopse" class="control-label"></label>
                            <textarea asp-for="Sinopse" class="form-control" rows="4" /></textarea>
                            <span asp-validation-for="Sinopse" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Voltar </a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
